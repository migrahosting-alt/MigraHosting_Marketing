{
  "compilerOptions": {
    "jsx": "react-jsx",
    "module": "ESNext",
    "moduleResolution": "Node",
    "target": "ES2022",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": false,
    "noImplicitAny": false,
    "forceConsistentCasingInFileNames": true,
    "types": ["vite/client", "node"],
    "baseUrl": ".",
    "allowJs": true,
    "paths": {
      "@apps/*": ["../*"],
      "@products/*": ["../products/*"],
      "@website/*": ["./src/*"],
      "@/*": ["./src/*"]
    }
  },
  "include": ["./src"],
  "exclude": ["dist", "node_modules"]
}
