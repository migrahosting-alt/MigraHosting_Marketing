# Database Configuration (Shared with mPanel)
DATABASE_URL=postgresql://mpanel:mpanel@localhost:5433/mpanel

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_CACHE_TTL=3600

# MinIO Configuration (Shared with mPanel)
MINIO_ENDPOINT=localhost
MINIO_PORT=9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_USE_SSL=false
MINIO_BUCKET=marketing-cms

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=24h

# mPanel Integration
MPANEL_API_URL=http://localhost:2271/api
MPANEL_SSO_SECRET=shared-sso-secret-with-mpanel

# Server Configuration
PORT=4243
NODE_ENV=development
CORS_ORIGIN=http://localhost:5173,http://localhost:2272

# Upload Limits
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,image/webp,image/svg+xml
